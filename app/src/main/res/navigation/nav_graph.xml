<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.habittracker.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addHabitFragment"
            app:destination="@id/addHabitFragment" />
    </fragment>

    <!-- HABITS -->
    <fragment
        android:id="@+id/habitsFragment"
        android:name="com.example.habittracker.ui.HabitsFragment"
        android:label="Habits"
        tools:layout="@layout/fragment_habits">
        <action
            android:id="@+id/action_habitsFragment_to_addHabitFragment"
            app:destination="@id/addHabitFragment" />
    </fragment>

    <!-- MOOD -->
    <fragment
        android:id="@+id/moodFragment"
        android:name="com.example.habittracker.ui.MoodFragment"
        android:label="Mood"
        tools:layout="@layout/fragment_mood" />

    <!-- PROFILE -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.habittracker.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- ADD HABIT -->
    <fragment
        android:id="@+id/addHabitFragment"
        android:name="com.example.habittracker.ui.AddHabitFragment"
        android:label="Add Habit"
        tools:layout="@layout/fragment_add_habit" />
</navigation>
