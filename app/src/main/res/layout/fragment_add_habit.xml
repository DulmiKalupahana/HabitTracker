<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.AddHabitFragment">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="@string/add_habit_title"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_habit_heading"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Habit Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/add_habit_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Repeat Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_habit_repeat"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/tgRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepeatDaily"
                    style="@style/TogglePill"
                    android:text="@string/add_habit_repeat_daily" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepeatWeekly"
                    style="@style/TogglePill"
                    android:text="@string/add_habit_repeat_weekly" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepeatMonthly"
                    style="@style/TogglePill"
                    android:text="@string/add_habit_repeat_monthly" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Daily Layout -->
            <LinearLayout
                android:id="@+id/layoutDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_habit_daily_label"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbAllDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_habit_daily_all"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/tgDailyDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="false">

                    <com.google.android.material.button.MaterialButton
                        android:text="S"
                        style="@style/ToggleSquare" />
                    <com.google.android.material.button.MaterialButton
                        android:text="M"
                        style="@style/ToggleSquare" />
                    <com.google.android.material.button.MaterialButton
                        android:text="T"
                        style="@style/ToggleSquare" />
                    <com.google.android.material.button.MaterialButton
                        android:text="W"
                        style="@style/ToggleSquare" />
                    <com.google.android.material.button.MaterialButton
                        android:text="T"
                        style="@style/ToggleSquare" />
                    <com.google.android.material.button.MaterialButton
                        android:text="F"
                        style="@style/ToggleSquare" />
                    <com.google.android.material.button.MaterialButton
                        android:text="S"
                        style="@style/ToggleSquare" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <!-- Weekly Layout -->
            <LinearLayout
                android:id="@+id/layoutWeekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_habit_weekly_label"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/tgWeekNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false">

                    <com.google.android.material.button.MaterialButton
                        android:text="1"
                        style="@style/ToggleRound" />
                    <com.google.android.material.button.MaterialButton
                        android:text="2"
                        style="@style/ToggleRound" />
                    <com.google.android.material.button.MaterialButton
                        android:text="3"
                        style="@style/ToggleRound" />
                    <com.google.android.material.button.MaterialButton
                        android:text="4"
                        style="@style/ToggleRound" />
                    <com.google.android.material.button.MaterialButton
                        android:text="5"
                        style="@style/ToggleRound" />
                    <com.google.android.material.button.MaterialButton
                        android:text="6"
                        style="@style/ToggleRound" />
                    <com.google.android.material.button.MaterialButton
                        android:text="7"
                        style="@style/ToggleRound" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <!-- Monthly Layout -->
            <LinearLayout
                android:id="@+id/layoutMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_habit_monthly_label"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_habit_monthly_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMonthlyDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Date Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_habit_date_label"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_input_bg"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="@color/textSecondary" />

                <TextView
                    android:id="@+id/tvHabitDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/add_habit_date_none"
                    android:textColor="@color/textPrimary" />

                <ImageButton
                    android:id="@+id/btnPickHabitDate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@color/textSecondary" />
            </LinearLayout>

            <!-- Reminder -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_habit_reminder_label"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="07:00"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="2"
        android:background="@color/lineSoft"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_habit_cancel"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/add_habit_save"
            android:textColor="@color/textOnAccent"
            android:backgroundTint="@color/colorAccent"
            app:cornerRadius="16dp" />
    </LinearLayout>

</LinearLayout>
