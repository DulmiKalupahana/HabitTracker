<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:text="Create New Habit"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Habit Name -->
        <EditText
            android:id="@+id/etTitle"
            android:hint="Habit Name"
            android:padding="14dp"
            android:background="@drawable/rounded_input_bg"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Color Selection -->
        <TextView
            android:text="Color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/colorGrid"
            android:columnCount="5"
            android:useDefaultMargins="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View style="@style/Swatch" android:backgroundTint="@color/taskYellow" />
            <View style="@style/Swatch" android:backgroundTint="@color/taskOrange" />
            <View style="@style/Swatch" android:backgroundTint="@color/taskPink" />
            <View style="@style/Swatch" android:backgroundTint="@color/taskBlue" />
            <View style="@style/Swatch" android:backgroundTint="@color/taskGreen" />
            <View style="@style/Swatch" android:backgroundTint="@color/taskPurple" />
        </GridLayout>

        <!-- Repeat -->
        <TextView
            android:text="Repeat"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tgRepeat"
            app:singleSelection="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton android:id="@+id/btnDaily" style="@style/TogglePill" android:text="Daily" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnWeekly" style="@style/TogglePill" android:text="Weekly" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnMonthly" style="@style/TogglePill" android:text="Monthly" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Date -->
        <TextView
            android:text="When"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rounded_input_bg"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@android:drawable/ic_menu_today" app:tint="@color/textPrimary"
                android:layout_width="24dp" android:layout_height="24dp" />
            <TextView android:id="@+id/tvDate" android:text="Today" android:textColor="@color/textPrimary"
                android:layout_marginStart="8dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" />
            <ImageButton android:id="@+id/btnPickDate" android:src="@android:drawable/ic_menu_edit"
                android:background="@android:color/transparent" app:tint="@color/textPrimary"
                android:layout_width="40dp" android:layout_height="40dp" />
        </LinearLayout>

        <!-- Reminder -->
        <TextView
            android:text="Set Reminder"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/tvTime" android:text="07:00 AM" android:textColor="@color/textSecondary"
                android:layout_marginStart="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btnCancel" android:text="Cancel"
                android:backgroundTint="@color/taskPink" android:textColor="@color/textPrimary"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Button android:id="@+id/btnSave" android:text="Save"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/textOnAccent"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
